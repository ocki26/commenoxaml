<UserControl x:Class="test2.BrowserNavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:test2"
             mc:Ignorable="d"
             d:DesignHeight="50" d:DesignWidth="1000">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Icon.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="#FF2E2E2E">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <!-- Back -->
            <ColumnDefinition Width="Auto"/>
            <!-- Forward -->
            <ColumnDefinition Width="Auto"/>
            <!-- Reload -->
            <ColumnDefinition Width="Auto"/>
            <!-- Home -->
            <ColumnDefinition Width="*"/>
            <!-- Address Bar -->
            <ColumnDefinition Width="Auto"/>
            <!-- Lock Icon -->
            <ColumnDefinition Width="Auto"/>
            <!-- Menu -->
        </Grid.ColumnDefinitions>

        <!-- Back Button -->
        <Button x:Name="BackButton" Grid.Column="0" Style="{StaticResource NavigationButtonStyle}" Click="BackButton_Click">
            <Viewbox Style="{StaticResource IconViewboxStyle}">
                <Path Data="{StaticResource BackBtnIcon}" Fill="White"/>
            </Viewbox>
        </Button>

        <!-- Forward Button -->
        <Button x:Name="ForwardButton" Grid.Column="1" Style="{StaticResource NavigationButtonStyle}" Click="ForwardButton_Click">
            <Viewbox Style="{StaticResource IconViewboxStyle}">
                <Path Data="{StaticResource ForwardBtnIcon}" Fill="White"/>
            </Viewbox>
        </Button>

        <!-- Reload Button -->
        <Button x:Name="ReloadButton" Grid.Column="2" Style="{StaticResource NavigationButtonStyle}" Click="ReloadButton_Click">
            <Viewbox Width="25" Height="25" Style="{StaticResource IconViewboxStyle}">
                <Path Data="{StaticResource LoadBtnIcon}" Fill="White"/>
            </Viewbox>
        </Button>

        <!-- Home Button -->
        <Button x:Name="HomeButton" Grid.Column="3" Style="{StaticResource NavigationButtonStyle}" Click="HomeButton_Click">
            <Viewbox Style="{StaticResource IconViewboxStyle}">
                <Path Data="{StaticResource HomeBtnIcon}" Fill="White"/>
            </Viewbox>
        </Button>

        <!-- Address Bar content -->
        <Border Grid.Column="4" Background="#FF4A4A4A" CornerRadius="8" Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Viewbox Grid.Column="0" Width="20" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5 0 0 0">
                    <Path x:Name="SecurityIcon" Data="{StaticResource LockBtnIcon}" Fill="White"/>
                </Viewbox>

                <TextBox x:Name="AddressTextBox" Grid.Column="1"
                         Text="https://www.google.com"
                         VerticalContentAlignment="Center"
                         Background="Transparent"
                         BorderBrush="Transparent"
                         Foreground="White"
                         FontSize="14"
                         Padding="5 0 5 0"
                         KeyUp="AddressTextBox_KeyUp"
                         TextChanged="AddressTextBox_TextChanged"
                         LostFocus="AddressTextBox_LostFocus"
                         GotFocus="AddressTextBox_GotFocus"/>

                <Button x:Name="SearchButton" Grid.Column="2" Style="{StaticResource NavigationButtonStyle}" Click="SearchButton_Click">
                    <Viewbox VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0 0 7 0" Style="{StaticResource IconViewboxStyle}">
                        <Path Data="{StaticResource SearchBtnIcon}" Fill="White"/>
                    </Viewbox>
                </Button>
            </Grid>
        </Border>

        <!-- Popup để hiển thị gợi ý -->
        <Popup x:Name="SuggestionsPopup" StaysOpen="False"
               PlacementTarget="{Binding ElementName=AddressTextBox}"
               Placement="Bottom"
               AllowsTransparency="True"
               VerticalOffset="5"
               Grid.Column="4" Width="800">
            <Border Background="#FF4A4A4A" BorderBrush="#FF5A5A5A" BorderThickness="1" CornerRadius="4">
                <ListBox x:Name="SuggestionsListBox"
                         Background="Transparent"
                         BorderBrush="Transparent"
                         Foreground="White"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         MaxHeight="300"
                         SelectionChanged="SuggestionsListBox_SelectionChanged"
                         PreviewMouseUp="SuggestionsListBox_PreviewMouseUp">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="5"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border Name="Border" Padding="{TemplateBinding Padding}"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                            <ContentPresenter />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#FF6A6A6A"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#FF7A7A7A"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Border>
        </Popup>

        <!-- Menu Button -->
        <Button x:Name="MenuButton" Grid.Column="6" Style="{StaticResource NavigationButtonStyle}" Click="MenuButton_Click">
            <Viewbox Style="{StaticResource IconViewboxStyle}">
                <Path Data="{StaticResource MenuBtnIcon}" Fill="White"/>
            </Viewbox>
        </Button>
    </Grid>

    <UserControl.Style>
        <Style TargetType="UserControl">
            <Setter Property="Height" Value="40"/>
        </Style>
    </UserControl.Style>
</UserControl>