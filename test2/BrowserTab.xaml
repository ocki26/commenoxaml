<UserControl x:Class="test2.BrowserTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:test2"
             xmlns:cefsharp="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Navigation Bar -->
            <RowDefinition Height="*"/>
            <!-- Browser Content -->
        </Grid.RowDefinitions>

        <!-- Browser Navigation Bar -->
        <local:BrowserNavigationBar x:Name="NavigationBar" Grid.Row="0" Loaded="NavigationBar_Loaded"/>

        <!-- CefSharp Browser -->
        <cefsharp:ChromiumWebBrowser x:Name="Browser"
                                     Grid.Row="1"
                                     Address="https://www.google.com"
                                     Background="Black"
                                     Loaded="Browser_Loaded"
                                     AddressChanged="Browser_AddressChanged"
                                     LoadingStateChanged="Browser_LoadingStateChanged"
                                     IsBrowserInitializedChanged="Browser_IsBrowserInitializedChanged"
                                     TitleChanged="Browser_TitleChanged"
                                     />
    </Grid>
</UserControl>